{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SDL Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-I/usr/include/SDL2",
                "-lSDL2","-lSDL2_image","-lSDL2_mixer","-lSDL2_ttf",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            }
        }
    ]
}